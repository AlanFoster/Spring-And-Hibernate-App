<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
    <!-- The base definition which other definitions should extend from -->
    <definition name="base.definition" template="/WEB-INF/views/core/layout.jsp">
        <!-- Core Website Attributes -->
        <put-attribute name="website.title" value="Employee Application" />
        <put-attribute name="website.version" value="1.0" />

        <put-attribute name="page.title" value="" />

        <put-attribute name="body" value="" />

        <put-attribute name="copyright" value="/WEB-INF/views/core/copyright.jsp" />
    </definition>

    <!-- The Core employee Detail view which should be extended by other views as appropiate -->
    <definition name="employeeDetail" extends="base.definition">
        <put-attribute name="page.title" value="Employee Detail" />
        <put-attribute name="body" value="/WEB-INF/views/employee/employeeDetail.jsp" />
        <!-- Detail Type one of 'Edit', 'View' (Read Only) -->
        <put-attribute name="detailType" value="" />
    </definition>


    <!-- TODO Add Employee View -->
    <definition name="employee" extends="base.definition">
        <put-attribute name="page.title" value="Employee" />
        <put-attribute name="body" value="/WEB-INF/views/employee/employee.jsp" />
    </definition>

    <!-- Edit Employee View -->
    <definition name="editEmployee" extends="employeeDetail">
        <put-attribute name="page.title" value="Edit Employee" />
        <put-attribute name="body" value="/WEB-INF/views/employee/employeeDetail.jsp" />
        <put-attribute name="detailType" value="edit" />
    </definition>

</tiles-definitions>